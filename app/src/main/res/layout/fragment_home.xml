<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".home.HomeFragment">

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/emotion"
        android:layout_width="280dp"
        android:layout_height="280dp"
        android:layout_marginTop="35dp"
        android:background="@drawable/background_circle"
        android:padding="50dp"
        app:lottie_autoPlay="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/emotion_regular_winking" />

    <soup.neumorphism.NeumorphButton
        android:id="@+id/record_audio"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginHorizontal="40dp"
        android:fontFamily="@font/hahmlet"
        android:gravity="center"
        android:text="Записать аудио"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/emotion"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:neumorph_backgroundColor="@color/blue"
        app:neumorph_shadowColorDark="@color/black"
        app:neumorph_shadowColorLight="@color/light_blue"
        app:neumorph_shapeType="flat" />

    <androidx.camera.view.PreviewView
        android:id="@+id/preview_view"
        android:layout_width="match_parent"
        android:layout_marginTop="15dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/record_audio">

    </androidx.camera.view.PreviewView>
</androidx.constraintlayout.widget.ConstraintLayout>